EditorConfig is awesome:
http://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8

[*]
end_of_line = crlf
insert_final_newline = false
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.cs]
indent_size = 4

[*.csproj]
indent_size = 2

# 2 space indentation
[*.js]
indent_style = space
indent_size = 2

[*.nuspec]
indent_size = 2
